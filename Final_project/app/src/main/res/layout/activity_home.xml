<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:gravity="center"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="680dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hello,"
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_topic"
                android:layout_marginStart="130dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_science"
                    >

                </ImageView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:layout_marginHorizontal="15dp"
                android:paddingLeft="20dp"
                android:background="@drawable/img_cgr"
                android:scaleType="fitXY"
                android:orientation="vertical">

                <TextView
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="The competition will be start tomorrow at 07.00 am!"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/stronggreen"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_rank"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/border_stroke_tn"
                    android:backgroundTint="#B302AAB0"
                    android:text="See details"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cardCornerRadius="30dp">

                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Popular course"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#CDE6FF"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounded_layout2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_flashcard"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_flashcard"
                        android:scaleType="fitXY"
                        />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="FLASHCARD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="Name of topic"></TextView>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnPlay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightblue"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/baseline_play_circle_filled_24" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#CDE6FF"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_layout2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_quizz"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_multiple"
                        android:scaleType="fitXY"
                        />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="QUIZZ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="Name of topic"></TextView>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnPlay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightblue"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/baseline_play_circle_filled_24" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#CDE6FF"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_layout2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_fillWord"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_fill"
                        android:scaleType="fitXY"
                        />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="FILL THE WORD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="Name of topic"></TextView>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnPlay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightblue"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/baseline_play_circle_filled_24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="Popular folder"></TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_to_topic"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/border_stroke_tn"
                    android:backgroundTint="#30FFFFFF"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="See all   >"
                    android:textAllCaps="false"></androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_topic_home"
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="5dp" />
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:id="@+id/bottonnavHome"
        app:menu="@menu/bottom_nav"
        app:labelVisibilityMode="labeled"
        style="@style/BottomNavigationView"
        app:itemIconTint="@color/bottombar"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>