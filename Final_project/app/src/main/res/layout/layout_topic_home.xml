<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:id="@+id/item_topic"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_150sdp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_item_topic"
        android:backgroundTint="@color/white"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_topic"
            android:layout_marginTop="10dp"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/img_topic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_science"
                />
        </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_name_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_quantity_vocab"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 Vocab"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/icon_game"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/gamecoin"
            android:scaleType="fitXY"
            android:layout_marginStart="0dp"
            ></ImageView>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>

