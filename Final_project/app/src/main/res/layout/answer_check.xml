<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/stronggreen"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp">
        <ImageButton
            android:id="@+id/btn_back_ansCheck"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_back"
            android:src="@drawable/baseline_keyboard_backspace_24">
        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@drawable/border_congra"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="CONGRATULATIONS!"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/white"
            ></TextView>
        <TextView
            android:id="@+id/txt_title_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="You get +30 Quiz Point"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"></TextView>
        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ellipse"
            android:gravity="center">
            <FrameLayout
                android:layout_width="172dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/ellipse"
                android:backgroundTint="@color/colorPoint"
                android:gravity="center">
            </FrameLayout>
            <TextView
                android:id="@+id/txt_pointInCircle"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:text="40"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:textStyle="bold"></TextView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_quantity_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/baseline_brightness_1_24"
                android:text="13"
                android:textColor="@color/pointPlus"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/txt_quantity_wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="160dp"
                android:drawableStart="@drawable/baseline_brightness_2_24"
                android:text="07"
                android:textColor="@color/pointMinus"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_fillper2"
        android:orientation="vertical"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="ANSWER CHECK"
            android:textColor="@color/greenAnswercheck"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_listAnswer"
            android:layout_width="match_parent"
            android:layout_height="406dp"
            android:layout_marginTop="80dp"></androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>

</LinearLayout>