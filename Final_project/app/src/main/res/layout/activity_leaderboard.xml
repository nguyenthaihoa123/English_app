<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B4242"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_back"
            android:src="@drawable/baseline_keyboard_backspace_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="-16dp">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="44dp"
            android:text="LEADERBOARD"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.521"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boardRank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        >

        <ImageView
            android:id="@+id/img_rank"
            android:layout_width="@dimen/_308sdp"
            android:layout_height="@dimen/_215sdp"
            android:src="@drawable/rank"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/rank_1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginTop="33dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_science"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/avatar"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="0dp" />

            <ImageView
                android:id="@+id/icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rank1"
                android:layout_marginTop="110dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/first">

            </ImageView>

            <TextView
                android:id="@+id/name_1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rank_1"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>
            <TextView
                android:id="@+id/score_1"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2430"
                android:textSize="20sp"
                android:textColor="#FFAA00"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_1"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--set rank 2-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/rank_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="93dp"
                android:padding="5dp"
                android:src="@drawable/img_science"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/avatar"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="0dp" />

            <ImageView
                android:id="@+id/icon_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rank2"
                android:layout_marginTop="155dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/second">

            </ImageView>

            <TextView
                android:id="@+id/name_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Hoa47"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rank_2"></TextView>

            <TextView
                android:id="@+id/score_2"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="#009BD6"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_2"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/rank_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="91dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_science"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/avatar"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="0dp" />

            <ImageView
                android:id="@+id/icon_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rank3"
                android:layout_marginTop="155dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/third">

            </ImageView>

            <TextView
                android:id="@+id/name_3"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Namdddde"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rank_3"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>
            <TextView
                android:id="@+id/score_3"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#00D95F"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_3"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/boardRank"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/rounded_flillper_leaderboard"
            android:orientation="vertical"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

<!--            <Button-->
<!--                android:id="@+id/btn_Today"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="35dp"-->
<!--                android:layout_marginStart="50dp"-->
<!--                android:layout_marginTop="7dp"-->
<!--                android:background="@drawable/rounded_button_leaderboard"-->
<!--                android:text="Today"-->
<!--                android:textAllCaps="false"-->
<!--                android:textColor="@color/white"></Button>-->

<!--            <Button-->
<!--                android:id="@+id/btn_Week"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="35dp"-->
<!--                android:layout_marginTop="7dp"-->
<!--                android:layout_marginStart="160dp"-->
<!--                android:background="@drawable/rounded_button_leaderboard"-->
<!--                android:text="Week"-->
<!--                android:textColor="@color/white"-->
<!--                android:textAllCaps="false"-->

<!--                ></Button>-->
<!--            <Button-->
<!--                android:id="@+id/btn_Month"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="35dp"-->
<!--                android:layout_marginTop="7dp"-->
<!--                android:layout_marginStart="270dp"-->
<!--                android:background="@drawable/rounded_button_leaderboard"-->
<!--                android:text="Month"-->
<!--                android:textColor="@color/white"-->
<!--                android:textAllCaps="false"-->

<!--                ></Button>-->
            <RadioGroup
                android:checkedButton="@+id/btn_Week"
                android:id="@+id/toggle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:orientation="horizontal"
                android:background="@drawable/out_line_toggle"

                android:gravity="center"
                android:layout_marginTop="5dp"
                android:animateLayoutChanges="true"
                >

                <RadioButton
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/btn_Today"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="Today"
                    android:textColor="@color/white"
                    android:background="@drawable/toggle_widget_background"
                    />

                <RadioButton
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/btn_Week"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="Week"
                    android:textColor="@color/white"
                    android:background="@drawable/toggle_widget_background"
                    />
                <RadioButton
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/btn_Month"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="Month"
                    android:textColor="@color/white"
                    android:background="@drawable/toggle_widget_background"
                    />

            </RadioGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_leaderboard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />


        </FrameLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>