<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item
                android:left="0dp"
                android:right="20dp"
                android:top="0dp"
                android:bottom="0dp">
                <shape android:shape="oval">
                    <!-- Solid color for unchecked state -->
                    <solid android:color="@color/white" />
                    <!-- Stroke (border) for unchecked state -->
                    <stroke
                        android:width="2dp"
                        android:color="@color/black" />
                    <!-- Size of the unchecked state -->
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>


        </layer-list>
    </item>
<!--//// set check status for radibutton -->
    <item android:state_checked="true">
        <layer-list>
            <item
                android:left="0dp"
                android:right="20dp"
                android:top="0dp"
                android:bottom="0dp"
                android:drawable="@drawable/right_answer">

            </item>

        </layer-list>
    </item>

</selector>
