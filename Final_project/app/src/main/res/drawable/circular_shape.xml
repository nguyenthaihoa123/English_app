<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set your desired background color here -->
        </shape>
    </item>
    <!-- Ring shape border -->
    <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
        <shape
            android:shape="ring"
            android:innerRadiusRatio="2.5"
            android:thickness="3dp"
            android:useLevel="false">
            <solid android:color="#004643" /> <!-- Set your desired ring color here -->
        </shape>
    </item>
